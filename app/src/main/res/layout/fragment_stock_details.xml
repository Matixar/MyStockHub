<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.stock.StockDetailsFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.chip.Chip
        android:id="@+id/stock_details_chip_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="false"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        tools:text="TSLA"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stock_details_cardView_basic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stock_details_chip_symbol"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/stock_details_basic_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/TextAppearance.AppCompat.Headline"
                app:layout_constraintEnd_toStartOf="@id/stock_details_basic_info_price_textview"
                android:layout_marginEnd="8dp"
                tools:text="Tesla Inc."/>
            <TextView
                android:id="@+id/stock_details_basic_info_price_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                style="@style/TextAppearance.Material3.HeadlineSmall"
                app:layout_constraintStart_toEndOf="@id/stock_details_basic_info_name"
                android:text="Price"
                />
            <TextView
                android:id="@+id/stock_details_basic_info_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/stock_details_basic_info_price_textview"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/TextAppearance.Material3.DisplaySmall"

                app:layout_constraintStart_toStartOf="@id/stock_details_basic_info_price_textview"
                tools:text="25000"
                />
            <TextView
                android:id="@+id/stock_details_basic_info_price_change_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/stock_details_basic_info_barrier"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/stock_details_basic_info_price_change_imageview"
                style="@style/TextAppearance.Material3.HeadlineSmall"
                android:text="Price change"/>
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/stock_details_basic_info_barrier"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/stock_details_basic_info_price"
                android:layout_marginEnd="8dp"
                />
            <TextView
                android:id="@+id/stock_details_basic_info_price_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/stock_details_basic_info_price_change_textview"
                app:layout_constraintStart_toStartOf="@id/stock_details_basic_info_price_change_textview"
                style="@style/TextAppearance.Material3.DisplaySmall"
                android:text="+250"/>
            <TextView
                android:id="@+id/stock_details_basic_info_price_change_percent"
                tools:text="(+2,5%)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/stock_details_basic_info_price_change"/>
            <ImageView
                android:id="@+id/stock_details_basic_info_price_change_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/stock_details_basic_info_price_change_percent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:src="@drawable/ic_arrow_profit"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/stock_details_advanced_info_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stock_details_cardView_basic_info"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="Volume"/>
                <TextView
                    android:id="@+id/stock_details_advanced_info_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="350000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="Low"/>
                <TextView
                    android:id="@+id/stock_details_advanced_info_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="350000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="High"/>
                <TextView
                    android:id="@+id/stock_details_advanced_info_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="350000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="Previous close"/>
                <TextView
                    android:id="@+id/stock_details_advanced_info_previousClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="350000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="Open"/>
                <TextView
                    android:id="@+id/stock_details_advanced_info_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="350000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:text="Latest Trading Day"/>
                <TextView
                    android:id="@+id/stock_details_advanced_info_latestTradingDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="17.01.2023"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/stock_details_button_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        android:text="buy"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.gold.GoldFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/gold_f_price_now_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="8dp"
            style="@style/TextAppearance.AppCompat.Title"
            android:text="Price today"/>
        <TextView
            android:id="@+id/gold_f_price_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gold_f_price_now_textview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            tools:text="1231512315"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/gold_f_price_change_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            style="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="@id/gold_f_price_now"
            app:layout_constraintStart_toEndOf="@id/gold_f_price_now"
            tools:text="+1238%"/>
        <TextView
            android:id="@+id/gold_f_price_yesterday_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gold_f_price_now"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Price yesterday"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="24dp"
            />
        <TextView
            android:id="@+id/gold_f_price_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gold_f_price_yesterday_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.calculator.CalculatorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/calculator_f_chipgroup"
            style="@style/Widget.Material3.ChipGroup"
            app:singleSelection="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_usdeur"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD/EUR"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_usdgbp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD/GBP"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_usdchf"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD/CHF"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_usdjpy"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD/JPY"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_usdcny"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD/CNY"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_eurgbp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EUR/GBP"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_eurchf"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EUR/CHF"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_gbpchf"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GBP/CHF"
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_plnusd"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLN/USD"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_plneur"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLN/EUR"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_plngbp"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLN/GBP"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/calculator_f_chip_plnchf"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PLN/CHF"
                />

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/calculator_f_exchangerates_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/calculator_f_chipgroup"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TextAppearance.Material3.HeadlineMedium"
            android:text="Exchange rates: "/>

        <EditText
            android:id="@+id/calculator_f_firstcurrency_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calculator_f_swapcurrencies_button"
            app:layout_constraintTop_toBottomOf="@id/calculator_f_exchangerates_textview"
            android:layout_marginTop="8dp"
            android:maxLength="3"
            android:textAlignment="center"
            android:layout_marginHorizontal="48dp"
            />
        <Button
            android:id="@+id/calculator_f_swapcurrencies_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Swap"
            app:layout_constraintEnd_toStartOf="@id/calculator_f_secondcurrency_edittext"
            app:layout_constraintTop_toBottomOf="@id/calculator_f_exchangerates_textview"
            app:layout_constraintStart_toEndOf="@id/calculator_f_firstcurrency_edittext" />

        <EditText
            android:id="@+id/calculator_f_secondcurrency_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:maxLength="3"
            android:layout_marginHorizontal="48dp"
            app:layout_constraintTop_toBottomOf="@id/calculator_f_exchangerates_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/calculator_f_swapcurrencies_button"
            />

        <EditText
            android:id="@+id/calculator_f_currencyvalue_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:minWidth="64dp"
            android:inputType="numberDecimal"
            tools:text="12345141235"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/calculator_f_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculator_f_swapcurrencies_button"
            />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/calculator_f_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/calculator_f_swapcurrencies_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="123"
            />

        <TextView
            android:id="@+id/calculator_f_currencyvalue_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/calculator_f_guideline"
            style="@style/TextAppearance.Material3.TitleLarge"
            app:layout_constraintTop_toTopOf="@id/calculator_f_currencyvalue_edittext"
            app:layout_constraintBottom_toBottomOf="@id/calculator_f_currencyvalue_edittext"
            tools:text="245,54"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>